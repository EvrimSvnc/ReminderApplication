<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Kullanıcı Bilgileri">

        <EditTextPreference
            app:key="signature"
            app:title="Kullanıcı Adı"
            android:icon="@drawable/ic_account_circle_black_24dp"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Ozellikler">

        <CheckBoxPreference
            app:key="BildirimIzni"
            app:defaultValue="false"
            android:icon="@drawable/ic_notifications_black_24dp"
            app:summaryOn="Bildirim izni verildi"
            app:summaryOff="Bildirim izni verilmedi."
            app:title="Bildirim İzni"
            />
        <SwitchPreferenceCompat

            app:key="DarkMode"
            app:defaultValue="false"
            app:title="Profili Gizle" />



    </PreferenceCategory>

</PreferenceScreen>
